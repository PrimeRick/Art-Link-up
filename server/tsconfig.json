{
    "compilerOptions": {
      "target": "es2016",
      "outDir": "./build",
      "module": "commonjs",
      "types": ["node"],
      "typeRoots": ["./node_modules/@types"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictNullChecks": true
    }
  }